# Application Environment
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/webpush

# VAPID Keys for Web Push (REQUIRED)
# Generate with: web-push generate-vapid-keys
VAPID_PUBLIC_KEY=BLx1xssUa_your_actual_public_key_here
VAPID_PRIVATE_KEY=your_actual_private_key_here
VAPID_CONTACT_EMAIL=your-email@example.com

# Security Keys (REQUIRED)
# Generate random strings with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_min_32_chars
ENCRYPTION_KEY=your_encryption_key_here_min_32_chars

# Admin Configuration
ADMIN_USERNAME=admin
# Generate password hash with: node -e "console.log(require('bcryptjs').hashSync('your-password', 12))"
ADMIN_PASSWORD_HASH=your_bcrypt_password_hash_here

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Optional: Logging
LOG_LEVEL=info